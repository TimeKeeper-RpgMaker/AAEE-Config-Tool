<Window x:Name="win_Main" x:Class="AAEE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:utility="clr-namespace:AAEE.Utility"
        Title="Advanced Actor and Enemy Engine - Configuration Tool" Height="750" Width="1000" ResizeMode="CanMinimize">

    <!--Region Window.Resources-->

    <Window.Resources>

        <utility:BooleanAndConverter x:Key="BooleanAndConverter"/>

        <!--Region Style Template-->

        <DataTemplate x:Key="ExpanderHeader">
            <TextBlock Text="{Binding}" FontSize="14"/>
        </DataTemplate>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="23"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="75"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="23"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="16"/>
        </Style>

        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="HeaderTemplate" Value="{StaticResource ExpanderHeader}"/>
        </Style>

        <Style x:Key="ExpanderBoder" TargetType="Border">
            <Setter Property="Background" Value="#FFE5E5E5"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="-1,0,-1,-1"/>
        </Style>

        <Style x:Key="ListBoxStyle" TargetType="ListBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="TextTitleStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <Style x:Key="TreeViewStyle" TargetType="TreeView">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <Style x:Key="IntegerUpDownStyle" TargetType="xctk:IntegerUpDown">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="23"/>
        </Style>

        <Style x:Key="DecimalUpDownStyle" TargetType="xctk:DecimalUpDown">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="23"/>
        </Style>

        <Style x:Key="ByteUpDownStyle" TargetType="xctk:ByteUpDown">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="23"/>
        </Style>

        <!--Endregion-->

    </Window.Resources>

    <!--Endregion-->

    <!--Region Key binding-->

    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="menu_FileOpen_Executed"/>
        <CommandBinding Command="Save" Executed="menu_FileSave_Executed"/>
        <CommandBinding Command="Close" Executed="menu_FileClose_Executed"/>
        <CommandBinding Command="Help" Executed="menu_Help_Executed"/>
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="Open"/>
        <KeyBinding Key="S" Modifiers="Control" Command="Save"/>
        <KeyBinding Key="F4" Modifiers="Control" Command="Close"/>
        <KeyBinding Key="F1" Modifiers="Control" Command="Help"/>
    </Window.InputBindings>

    <!--Endregion-->

    <!--Region MainWindow-->

    <Grid Background="#FFE5E5E5">

        <!--Region Menu-->

        <Menu Height="23" Width="992" HorizontalAlignment="Left" VerticalAlignment="Top">

            <!--Region File-->

            <MenuItem Header="File">
                <MenuItem x:Name="menu_FileOpen" Header="Open" Width="170" Margin="0,0,-10,0" Command="Open" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <Image Source="Windows/52.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menu_FileSave" Header="Save" Width="170" Margin="0,0,-10,0" Command="Save" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <Image Source="Windows/22.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menu_FileSaveAs" Header="Save As" Width="170" Margin="0,0,-10,0" Click="menu_FileSaveAs_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/86.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Height="2" Width="170"/>
                <MenuItem x:Name="menu_FileExit" Header="Exit" Width="170" Command="Close" InputGestureText="Ctrl+F4">
                    <MenuItem.Icon>
                        <Image Source="Windows/33.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Endregion-->

            <!--Region Tools-->

            <MenuItem Header="Tools">
                <MenuItem x:Name="menu_Tools_ResetTab" Header="Reset Tab" Width="180" Margin="0,0,-10,0" Click="menu_Tools_ResetTab_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/75.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menu_Tools_ResetAll" Header="Reset All" Width="180" Margin="0,0,-10,0" Click="menu_Tools_ResetAll_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/42a.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator Height="2" Width="180"/>
                <MenuItem x:Name="menu_Tools_Generate" Header="Generate Script" Width="180" Margin="0,0,-10,0" Click="menu_Tools_Generate_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/69.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Endregion-->

            <!--Region Help-->

            <MenuItem Header="Help">
                <MenuItem x:Name="menu_Help" Header="Help" Width="220" Command="Help" InputGestureText="Ctrl+F1">
                    <MenuItem.Icon>
                        <Image Source="Windows/3.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menu_About" Header="About" Width="220" Click="menu_About_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/4.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="menu_VersionHistory" Header="Version History" Width="220" Click="menu_VersionHistory_Click">
                    <MenuItem.Icon>
                        <Image Source="Windows/18.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Endregion-->

        </Menu>

        <!--Endregion-->

        <!--Region TabControl-->

        <TabControl x:Name="MainTab" Height="681" Width="972" Margin="10,28,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="MainTab_SelectionChanged">

            <!--Region General-->

            <TabItem Header="General">
                <Grid x:Name="Rect_General_CursedColor" Background="#FFE5E5E5">

                    <!--Region General data-->

                    <ScrollViewer Height="649" Width="966">
                        <StackPanel>

                            <!--Region Cursed-->

                            <Expander x:Name="exp_General_Cursed" Header="Cursed configuration" Style="{StaticResource ExpanderStyle}">
                                <Border Style="{StaticResource ExpanderBoder}">
                                    <Grid Height="314">

                                        <!--Region Grid definition-->

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!--Endregion-->

                                        <!--Region Cursed color-->

                                        <TextBlock Text="Set the color of the name of the cursed equipment." Margin="10,10,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:ColorCanvas x:Name="color_General_Cursed" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,31,0,0"/>

                                        <!--Endregion-->

                                        <!--Region Set show cursed-->

                                        <TextBlock Text="Show the cursed equipment in the equipment part of the menu." Margin="10,10,0,0" Grid.Column="1"
                                                   Style="{StaticResource TextBlockStyle}"/>
                                        <CheckBox x:Name="check_General_ShowCursed" Content="Set show cursed equipment" Margin="30,31,0,0" Grid.Column="1" Style="{StaticResource CheckBoxStyle}"
                                                  Checked="check_General_Parameter_Checked" Unchecked="check_General_Parameter_Unchecked"/>

                                        <!--Endregion-->

                                        <!--Region Set block cursed-->

                                        <TextBlock Margin="10,57,0,0" Height="32" Width="453" Grid.Column="1" Style="{StaticResource TextBlockStyle}"
                                                   Text="Prevent cursed equipment from been equipped. This option only work when the show cursed equipment is activated."/>
                                        <CheckBox x:Name="check_General_BlockCursed" Content="Set block cursed equipment" Margin="30,94,0,0" Grid.Column="1"
                                                  Style="{StaticResource CheckBoxStyle}" IsEnabled="{Binding IsChecked, ElementName=check_General_ShowCursed}"/>

                                        <!--Endregion-->

                                    </Grid>
                                </Border>
                            </Expander>

                            <!--Endregion-->

                            <!--Region Stat bypass-->

                            <Expander x:Name="exp_General_StatBypass" Header="Stat bypass configuration" Style="{StaticResource ExpanderStyle}">
                                <Border Style="{StaticResource ExpanderBoder}">
                                    <Grid Height="169">

                                        <!--Region Grid definition-->

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!--Endregion-->

                                        <!--Region Instruction-->

                                        <TextBlock Margin="10,10,0,0" Style="{StaticResource TextBlockStyle}"
                                                   Text="Bypass the normal limit stat limit of RPG Maker XP. When this option is not activated you can change the value of the limit of the stat and a limit of the HP and SP value." Grid.ColumnSpan="2"/>

                                        <!--Endregion-->

                                        <!--Region Stat Limit Bypass-->

                                        <CheckBox x:Name="check_General_StatLimitBypass" Content="Bypass the maximum limit of the all stat." Margin="10,31,0,0"
                                                  Style="{StaticResource CheckBoxStyle}" Checked="check_General_Parameter_Checked" Unchecked="check_General_Parameter_Unchecked"/>

                                        <!--Endregion-->

                                        <!--Region HP and SP-->

                                        <TextBlock Text="Set the maximum value of the HP and SP." Margin="30,55.5,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_HPSPMax" Margin="278,52,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Stat-->

                                        <TextBlock Text="Set the maximum value of the parameter stat." Margin="30,83.5,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_StatMax" Margin="278,80,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Rate-->

                                        <TextBlock Text="Set the maximum value of the parameter rate." Margin="30,111.5,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_RateMax" Margin="278,108,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Minimum multiplier bonus-->

                                        <TextBlock Text="Set the minimum value of the multiplier bonus." Margin="30,55.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_MulMin" Margin="288,52,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}" Grid.Column="1"/>

                                        <!--Endregion-->

                                        <!--Region Maximum multiplier bonus-->

                                        <TextBlock Text="Set the maximum value of the multiplier bonus." Margin="30,83.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_MulMax" Margin="288,80,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}" Grid.Column="1"/>

                                        <!--Endregion-->

                                        <!--Region Minimum additional bonus-->

                                        <TextBlock Text="Set the minimum value of the additional bonus." Margin="30,111.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_AddMin" Margin="288,108,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}" Grid.Column="1"/>

                                        <!--Endregion-->

                                        <!--Region Maximum additional bonus-->

                                        <TextBlock Text="Set the maximum value of the additional bonus." Margin="30,139.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <xctk:IntegerUpDown x:Name="intud_General_AddMax" Margin="288,136,0,0" Minimum="0" Style="{StaticResource IntegerUpDownStyle}" Grid.Column="1"/>

                                        <!--Endregion-->

                                    </Grid>
                                </Border>
                            </Expander>

                            <!--Endregion-->

                            <!--Region Stat behavior-->

                            <Expander x:Name="exp_General_StatBehavior" Header="Stat behavior configuration" Style="{StaticResource ExpanderStyle}">
                                <Border Style="{StaticResource ExpanderBoder}">
                                    <Grid Height="208">

                                        <!--Region Grid definition-->

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!--Endregion-->

                                        <!--Region Set weapon skill parameter style-->

                                        <TextBlock Margin="10,10,0,0" Height="32" Width="454" Style="{StaticResource TextBlockStyle}"
                                                   Text="Set the way the parameter rate and the defense rate are calculated for the weapon type skill."/>

                                        <TextBlock Text="Set the parameter attack force behavior." Margin="30,50.5,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <ComboBox x:Name="combo_General_ParamRateType" Margin="247,47,0,0" Style="{StaticResource ComboBoxStyle}"/>

                                        <TextBlock Text="Set the defense attack force behavior." Margin="30,78.5,0,0" Style="{StaticResource TextBlockStyle}"/>
                                        <ComboBox x:Name="combo_General_DefenseRateType" Margin="247,75,0,0" Style="{StaticResource ComboBoxStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Set parameter order-->

                                        <TextBlock Margin="10,10,0,0" Height="48" Width="453" Grid.Column="1" Style="{StaticResource TextBlockStyle}"
                                                   Text="Set the primary the parameter will be use for the parameter shared by the actors and the classes. The script will check for the primary parameter then will look for the second parameter."/>

                                        <TextBlock Text="Set the equipment name and list behavior." Margin="30,66.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <ComboBox x:Name="combo_General_OrderEquipmentList" Margin="259,63,0,0" Style="{StaticResource ComboBoxStyle}" Grid.Column="1"/>

                                        <TextBlock Text="Set the equipment flags behavior." Margin="30,94.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <ComboBox x:Name="combo_General_OrderEquipmentFlags" Margin="259,91,0,0" Style="{StaticResource ComboBoxStyle}" Grid.Column="1"/>

                                        <TextBlock Text="Set the equipment multiplier behavior." Margin="30,122.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <ComboBox x:Name="combo_General_OrderEquipmentMultiplier" Margin="259,119,0,0" Style="{StaticResource ComboBoxStyle}" Grid.Column="1"/>

                                        <TextBlock Text="Set the multi-hand reduction behavihor." Margin="30,150.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <ComboBox x:Name="combo_General_OrderHandReduce" Margin="259,147,0,0" Style="{StaticResource ComboBoxStyle}" Grid.Column="1"/>

                                        <TextBlock Text="Set the unarmed attack force behavior." Margin="29,178.5,0,0" Style="{StaticResource TextBlockStyle}" Grid.Column="1"/>
                                        <ComboBox x:Name="combo_General_OrderUnarmedAttackForce" Margin="259,175,0,0" Style="{StaticResource ComboBoxStyle}" Grid.Column="1"/>

                                        <!--Endregion-->

                                    </Grid>
                                </Border>
                            </Expander>

                            <!--Endregion-->

                        </StackPanel>

                    </ScrollViewer>

                    <!--Endregion-->

                    <!--Endregion-->

                </Grid>
            </TabItem>

            <!--Endregion-->

            <!--Region Default-->

            <TabItem Header="Default">
                <Grid Background="#FFE5E5E5">

                    <!--Region Default data-->

                    <ScrollViewer Height="649" Width="966">
                        <StackPanel>

                            <!--Region Equipment-->

                            <Expander x:Name="exp_Default_Equip" Header="Equipment configuration" Style="{StaticResource ExpanderStyle}">
                                <Border Style="{StaticResource ExpanderBoder}">
                                    <Grid>

                                        <!--Region Grid definition-->

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="238"/>
                                            <RowDefinition Height="113"/>
                                            <RowDefinition Height="87"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!--Endregion-->

                                        <!--Region Equipment list instruction-->

                                        <TextBlock Margin="10,10,0,0" Grid.ColumnSpan="3" Height="32" Width="927" Style="{StaticResource TextBlockStyle}"
                                                   Text="The following list display the configuration for the equipment type. The list on the left display the list of available equipment type and the name of the new equipment type. The list on the left display the organisation of equipment type in the Scene_Equip."/>

                                        <!--Endregion-->

                                        <!--Region Equip name-->

                                        <ListBox x:Name="list_Default_EquipType" Height="125" Width="150" Margin="301.5,52,0,0" Style="{StaticResource ListBoxStyle}"
                            				     SelectionChanged="list_Default_EquipType_SelectionChanged" Grid.ColumnSpan="2"/>

                                        <Button x:Name="btn_Default_AddEquipType" Content="Add" Margin="301.5,210,0,0" Width="72.5" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_AddEquipType_Click" Grid.ColumnSpan="2"/>
                                        <Button x:Name="btn_Default_RemoveEquipType" Content="Remove" Margin="63.333,210,0,0" Width="72.5" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_RemoveEquipType_Click" Grid.Column="1"/>
                                        <TextBox x:Name="txt_Default_NameEquipType" Margin="301.5,182,0,0" Width="150" Style="{StaticResource TextBoxStyle}" Grid.ColumnSpan="2"/>

                                        <!--Endregion-->

                                        <!--Region Equip list-->

                                        <Button x:Name="btn_Default_AddEquipList" Content=">" Margin="140.8,89,0,0" Width="35" Grid.Column="1" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_AddEquipList_Click"/>
                                        <Button x:Name="btn_Default_RemoveEquipList" Content="&lt;" Margin="140.5,117,0,0" Width="35" Grid.Column="1"
                                                Style="{StaticResource ButtonStyle}" Click="btn_Default_RemoveEquipList_Click"/>

                                        <ListBox x:Name="list_Default_EquipList" Height="125" Width="150" Margin="180.5,52,0,0" Grid.Column="1" Grid.ColumnSpan="2"
                                                 Style="{StaticResource ListBoxStyle}" SelectionChanged="list_Default_EquipList_SelectionChanged"/>

                                        <Button x:Name="btn_Default_UpEquipList" Margin="19.834,89,0,0" Width="35" Grid.Column="2" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_UpEquipList_Click" RenderTransformOrigin="2.229,0.696">
                                            <Path Fill="Black" Data="M 0 6 L 12 6 L 6 0 Z"/>
                                        </Button>
                                        <Button x:Name="btn_Default_DownEquipList" Margin="19.834,117,0,0" Width="35" Grid.Column="2" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_DownEquipList_Click">
                                            <Path Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z"/>
                                        </Button>

                                        <TextBox x:Name="txt_Default_NameEquipList" Margin="180.5,182,0,0" Width="150" Style="{StaticResource TextBoxStyle}"
                                                 Grid.Column="1" Grid.ColumnSpan="2"/>
                                        <Button x:Name="btn_Default_ResetNameEquipList" Content="Reset" Margin="180.5,210,0,0" Width="72.5" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_ResetNameEquipList_Click" Grid.Column="1"/>
                                        <Button x:Name="btn_Default_ResetAllNameEquipList" Content="Reset all" Margin="258,210,0,0" Width="72.5" Style="{StaticResource ButtonStyle}"
                                                Click="btn_Default_ResetAllNameEquipList_Click" Grid.Column="1" Grid.ColumnSpan="2"/>

                                        <!--Endregion-->

                                        <!--Region Dual hold-->

                                        <CheckBox x:Name="check_Default_DualHold" Content="Allow to equip a weapon in shield slot by default." Margin="10,10,0,0" Grid.Row="1"
                                                  Style="{StaticResource CheckBoxStyle}"/>

                                        <!--Region Dual hold name-->

                                        <TextBlock Text="Set the default dual hold name." Margin="10,36,0,0" Grid.Row="1" Style="{StaticResource TextBlockStyle}"/>

                                        <TextBlock Text="Weapon" Margin="10,60.5,0,0" Grid.Row="1" Style="{StaticResource TextBlockStyle}"/>
                                        <TextBox x:Name="txt_Default_DualHoldNameWeapon" Margin="60,57,0,0" Width="140" Grid.Row="1" Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Shield" Margin="10,88.5,0,0" Grid.Row="1" Style="{StaticResource TextBlockStyle}"/>
                                        <TextBox x:Name="txt_Default_DualHoldNameShield" Margin="60,85,0,0" Width="140" Grid.Row="1" Style="{StaticResource TextBoxStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Dual hold multiplier-->

                                        <TextBlock Text="Set the default dual hold multiplier." Margin="10,36,0,0" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>

                                        <TextBlock Text="Weapon" Margin="10,60.5,0,0" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:DecimalUpDown x:Name="decud_Default_DualHoldMulWeapon" FormatString="P2" Increment=".0001" Margin="60,57,0,0" Grid.Row="1" Grid.Column="1"
                                                            Minimum="0" Style="{StaticResource DecimalUpDownStyle}"/>

                                        <TextBlock Text="Shield" Margin="10,88.5,0,0" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:DecimalUpDown x:Name="decud_Default_DualHoldMulShield" FormatString="P2" Increment=".0001" Margin="60,85,0,0" Grid.Row="1" Grid.Column="1"
                                                            Minimum="0" Style="{StaticResource DecimalUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Endregion-->

                                        <!--Region Hand Bypass-->

                                        <!--Region Shield Hand bypass-->

                                        <CheckBox x:Name="check_Default_ShieldBypass" Margin="10,36,0,0" Width="295.667" Height="32" Grid.Row="1" Grid.Column="2" Style="{StaticResource CheckBoxStyle}">
                                            <TextBlock Text="Allow shield slot only weapon to be equipped in the weapon slot by default." TextWrapping="Wrap"/>
                                        </CheckBox>

                                        <TextBlock Text="Multiplier" Margin="10,76.5,0,0" Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:DecimalUpDown x:Name="decud_Default_ShieldBypass" FormatString="P2" Increment=".0001" Margin="66,73,0,0" Grid.Row="1" Grid.Column="2"
                                                            Minimum="0" Style="{StaticResource DecimalUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Region Weapon hand bypass-->

                                        <CheckBox x:Name="check_Default_WeaponBypass" Margin="10,5,0,0" Width="295.667" Height="32" Grid.Row="2" Style="{StaticResource CheckBoxStyle}">
                                            <TextBlock Text="Allow weapon slot only weapon to be equipped in the shield slot by default." TextWrapping="Wrap"/>
                                        </CheckBox>

                                        <TextBlock Text="Multiplier" Margin="10,45.5,0,0" Grid.Row="2" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:DecimalUpDown x:Name="decud_Default_WeaponBypass" FormatString="P2" Increment=".0001" Margin="66,42,0,0" Grid.Row="2"
                                                            Minimum="0" Style="{StaticResource DecimalUpDownStyle}"/>

                                        <!--Endregion-->

                                        <!--Endregion-->

                                        <!--Region Hand reduce-->

                                        <TextBlock Text="Set the default multi-hand reduction." Margin="10,5,0,0" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>

                                        <TextBlock Text="Hand" Margin="10,29.5,0,0" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:IntegerUpDown x:Name="intud_Default_ReduceHand" Margin="66,26,0,0" Grid.Row="2" Grid.Column="1" Minimum="0"
                                                            Style="{StaticResource IntegerUpDownStyle}"/>

                                        <TextBlock Text="Multiplier" Margin="10,59.5,0,0" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBlockStyle}"/>
                                        <xctk:DecimalUpDown x:Name="decud_Default_ReduceHandMul" FormatString="P2" Increment=".0001" Margin="66,54,0,0" Grid.Row="2" Grid.Column="1"
                                                            Minimum="0" Style="{StaticResource DecimalUpDownStyle}"/>

                                        <!--Endregion-->

                                    </Grid>
                                </Border>
                            </Expander>

                            <!--Endregion-->

